{
  "manifest_version": 2,
  "name": "__MSG_app_name__",
  "short_name": "__MSG_app_short_name__",
  "description": "__MSG_app_description__",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "default_locale": "en",
  "version": "2.1.2",
  "author": "raingart",
  "permissions": [
    "tabs",
    "storage",
    "downloads",
    "downloads.shelf",
    "notifications"
  ],
  "background": {
    "scripts": ["/lib/storage.min.js", "/lib/localization.min.js", "/js/background.js"]
  },
  "browser_action": {
    "default_title": "__MSG_app_title__"
  },
  "icons": {
    "16": "/icons/16.png",
    "48": "/icons/48.png",
    "128": "/icons/128.png"
  },
  "options_page": "/html/settings.html",
  "options_ui": {
    "chrome_style": false,
    "page": "/html/settings.html"
  }
}
